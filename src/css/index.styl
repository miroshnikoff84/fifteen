body,
html {
    font 16px/1.4 Georgia, serif
}

.page{
    max-width 400px
    padding 2rem
    margin 0 auto
    text-align center
    user-select none
}

h1{
    font 2rem/1.2 Georgia, serif
    margin-bottom 1em
}

.fifteen{
    width 100%
    padding-bottom 100%
    background #9091bb
    margin-bottom 1.5rem
    border-radius: 10px
    position relative

    .item{
        position absolute
        left 0
        top 0
        width 25%
        height 25%
        margin 0
        padding 0
        border none
        background rgb(136, 136, 136)
        color white
        font-size 2rem
        border-radius: 10px
        cursor pointer
        transition: transform .2s, filter 0.5s
        &Val{
            display flex
            align-items center
            justify-content center
            width 84%
            height 84%
            margin 8%
            border-radius: 10px
            box-shadow: inset 0 0 0 2px #fafafa
            }
        }
    &Won {
        .item{
            background rgb(80, 218, 0)
        }
    }
    }


    .button{
        background #000
        color white
        font 1.2rem/1.4 Georgia, serif
        border none
        cursor pointer
        padding 0.5em 1.5em 

        &:hover{
            background rgb(97, 88, 228)
            }
        
        }
        
